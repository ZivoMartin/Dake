FROM rust:1.83-alpine AS builder

RUN apk add --no-cache git musl-dev openssl-dev pkgconfig

# Clone and build dake
WORKDIR /app
RUN git clone https://github.com/yourusername/dake.git .
RUN cargo build --release

# Runtime image: minimal alpine with dake binary only
FROM alpine:latest

COPY --from=builder /app/target/debug/dake /usr/local/bin/dake

# Command to run when container starts
ENTRYPOINT ["dake", "daemon"]
